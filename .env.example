# Environment variables for Docker development
# Copy this file to .env and update with your actual values

# Database Configuration
DB_USER=portfoliio_user
DB_PASSWORD=portfoliio_password
DB_NAME=portfoliio_db

# For Vercel/Production: Use Neon PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# JWT Secret (Change this to a random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters

# Gmail API Configuration
# See docs/GMAIL_SETUP.md for instructions on getting these credentials
GMAIL_CLIENT_ID=your_google_cloud_client_id_here
GMAIL_CLIENT_SECRET=your_google_cloud_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:3000/api/gmail/callback

# Vercel Cron Secret (Generate a random string for production)
CRON_SECRET=your-secure-random-cron-secret-change-in-production

# Frontend URL (for CORS in production)
FRONTEND_URL=https://your-app.vercel.app
